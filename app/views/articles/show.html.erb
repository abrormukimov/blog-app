<h2 class="center">Title: <%= @article.title %></h2>

<div class="well col-xs-8 col-xs-offset-2">
	<ul class="listing">
		<div class="row">
			<div class="well col-md-4 col-md-offset-4">
				<li><%= link_to gravatar_for(@article.user), user_path(@article.user) %></li>
				<li class="article-title">
					<%= link_to @article.user.username, user_path(@article.user) %>
				</li>
				<li><small>
					<%= pluralize(@article.user.articles.count, "article") if @article.user.articles %>
				</small></li>
			</div>
		</div>
	</ul>
	<h4 class="center description-title"><strong>Description:</strong></h4>
	<hr>
	<%= simple_format(@article.description) %>
	<div class="article-actions">
		<%= link_to "Edit", edit_article_path(@article), class: "btn btn-xs btn-primary" %>
		<%= link_to "Delete", article_path(@article), method: :delete, data: { confirm: "Would you like to delete?" }, class: "btn btn-xs btn-danger" %>
		<%= link_to "View all articles", articles_path, class: "btn btn-xs btn-success" %>
	</div>
</div>